{
    "name": "friendsofhyperf/encryption",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "encryption",
        "swoole"
    ],
    "authors": [{
        "name": "Huangdijia",
        "email": "huangdijia@gmail.com",
        "homepage": "https://github.com/huangdijia"
    }],
    "description": "The Encryption package for Hyperf.",
    "autoload": {
        "psr-4": {
            "Friendsofhyperf\\Encryption\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Friendsofhyperf\\Encryption\\Test\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.3",
        "ext-swoole": ">=4.5",
        "hyperf/contract": "^2.0",
        "hyperf/di": "^2.0",
        "hyperf/framework": "^2.0"
    },
    "require-dev": {
        "hyperf/testing": "^2.0",
        "phpstan/phpstan": "^0.12",
        "friendsofphp/php-cs-fixer": "^2.14|^3.0",
        "opis/closure": "^3.6"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hyperf": {
            "config": "Hyperf\\Encryption\\ConfigProvider"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./src"
    }
}